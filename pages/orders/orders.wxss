.container {
  min-height: 100vh;
  background: #0a0a0a;
  color: #e5e5e5;
}

/* 页面头部 */
.header {
  background: linear-gradient(135deg, #1a1a1a, #2d1b69);
  padding: 32rpx;
  border-bottom: 1rpx solid #374151;
}

.header-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.back-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(245, 158, 11, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #f59e0b;
  border: none;
}

.title {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.icon {
  font-size: 48rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #e5e5e5;
}

.placeholder {
  width: 80rpx;
}

/* 标签栏 */
.tab-bar {
  display: flex;
  background: #1a1a1a;
  border-bottom: 1rpx solid #374151;
  overflow-x: auto;
}

.tab-item {
  flex: 1;
  min-width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 24rpx 16rpx;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #f59e0b;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #f59e0b;
  border-radius: 2rpx;
}

.tab-text {
  font-size: 28rpx;
  color: inherit;
}

.tab-count {
  background: #ef4444;
  color: white;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
  font-weight: 500;
  min-width: 32rpx;
  text-align: center;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  gap: 24rpx;
}

.loading-icon {
  font-size: 64rpx;
  animation: spin 2s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: #9ca3af;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  text-align: center;
  padding: 32rpx;
}

.empty-icon {
  font-size: 128rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #e5e5e5;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #9ca3af;
}

/* 订单列表 */
.orders-list {
  padding: 32rpx;
}

.order-card {
  background: #1a1a1a;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #374151;
  overflow: hidden;
}

.order-card.pending {
  border-color: #f59e0b;
  background: linear-gradient(135deg, #1a1a1a, rgba(245, 158, 11, 0.05));
}

.order-card.shipped {
  border-color: #3b82f6;
  background: linear-gradient(135deg, #1a1a1a, rgba(59, 130, 246, 0.05));
}

.order-card.received {
  border-color: #10b981;
  background: linear-gradient(135deg, #1a1a1a, rgba(16, 185, 129, 0.05));
}

/* 订单头部 */
.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #374151;
  background: rgba(0, 0, 0, 0.2);
}

.order-info {
  flex: 1;
}

.order-no {
  font-size: 26rpx;
  color: #e5e5e5;
  display: block;
  margin-bottom: 8rpx;
}

.create-time {
  font-size: 22rpx;
  color: #9ca3af;
}

.order-status {
  text-align: right;
}

.status-text {
  font-size: 28rpx;
  font-weight: bold;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.order-card.pending .status-text {
  color: #f59e0b;
  background: rgba(245, 158, 11, 0.2);
}

.order-card.shipped .status-text {
  color: #3b82f6;
  background: rgba(59, 130, 246, 0.2);
}

.order-card.received .status-text {
  color: #10b981;
  background: rgba(16, 185, 129, 0.2);
}

/* 商品列表 */
.order-items {
  padding: 24rpx 32rpx;
}

.order-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.order-item:last-child {
  margin-bottom: 0;
}

.item-image {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #374151;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.item-emoji {
  font-size: 32rpx;
}

.element-tag {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  padding: 2rpx 6rpx;
  border-radius: 6rpx;
  font-size: 16rpx;
  font-weight: 500;
}

.element-tu {
  background: rgba(245, 158, 11, 0.9);
  color: white;
}

.element-huo {
  background: rgba(239, 68, 68, 0.9);
  color: white;
}

.element-mu {
  background: rgba(34, 197, 94, 0.9);
  color: white;
}

.element-jin {
  background: rgba(156, 163, 175, 0.9);
  color: white;
}

.element-shui {
  background: rgba(59, 130, 246, 0.9);
  color: white;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 28rpx;
  color: #e5e5e5;
  margin-bottom: 8rpx;
}

.item-price {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 订单金额 */
.order-amount {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 16rpx 32rpx;
  border-top: 1rpx solid #374151;
  gap: 8rpx;
}

.amount-label {
  font-size: 26rpx;
  color: #9ca3af;
}

.amount-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #ec4899;
}

/* 收货地址 */
.order-address {
  padding: 16rpx 32rpx;
  border-top: 1rpx solid #374151;
  background: rgba(55, 65, 81, 0.3);
}

.address-label {
  font-size: 24rpx;
  color: #9ca3af;
}

.address-text {
  font-size: 26rpx;
  color: #e5e5e5;
  line-height: 1.4;
}

/* 物流信息 */
.tracking-info {
  padding: 16rpx 32rpx;
  border-top: 1rpx solid #374151;
  background: rgba(59, 130, 246, 0.1);
}

.tracking-label {
  font-size: 24rpx;
  color: #9ca3af;
}

.tracking-no {
  font-size: 26rpx;
  color: #3b82f6;
  font-weight: 500;
}

/* 订单操作 */
.order-actions {
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #374151;
}

.action-group {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
}

.action-btn {
  padding: 20rpx 32rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.action-btn.secondary {
  background: #374151;
  color: #e5e5e5;
}

.action-btn.primary {
  background: linear-gradient(135deg, #ec4899, #f59e0b);
  color: white;
}

.action-btn:active {
  transform: scale(0.95);
}