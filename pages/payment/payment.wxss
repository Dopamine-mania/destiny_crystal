.container {
  min-height: 100vh;
  background: #0a0a0a;
  color: #e5e5e5;
  padding: 32rpx;
}

.header {
  text-align: center;
  margin-bottom: 48rpx;
}

.title {
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon {
  font-size: 48rpx;
  margin-right: 16rpx;
  color: #f59e0b;
}

.title-text {
  font-size: 48rpx;
  font-weight: bold;
}

.order-summary {
  background: #1a1a1a;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  border: 2rpx solid #374151;
}

.summary-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #f59e0b;
  margin-bottom: 24rpx;
}

.order-items {
  margin-bottom: 24rpx;
}

.order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #374151;
}

.order-item:last-child {
  border-bottom: none;
}

.item-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.item-name {
  font-size: 28rpx;
  color: #e5e5e5;
}

.item-quantity {
  font-size: 24rpx;
  color: #9ca3af;
}

.item-total {
  font-size: 28rpx;
  font-weight: 500;
  color: #ec4899;
}

.total-line {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
  border-top: 2rpx solid #374151;
}

.total-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #e5e5e5;
}

.total-amount {
  font-size: 48rpx;
  font-weight: bold;
  color: #f59e0b;
}

/* 收货地址 */
.address-section {
  background: #1a1a1a;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  border: 2rpx solid #374151;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #f59e0b;
  margin-bottom: 24rpx;
}

.address-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border: 2rpx solid #374151;
  border-radius: 12rpx;
  background: rgba(245, 158, 11, 0.05);
  transition: all 0.3s ease;
}

.address-card:active {
  background: rgba(245, 158, 11, 0.1);
  transform: scale(0.98);
}

.address-content {
  flex: 1;
}

.address-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.recipient-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #e5e5e5;
}

.recipient-phone {
  font-size: 28rpx;
  color: #9ca3af;
}

.address-tag {
  background: #f59e0b;
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.address-detail {
  margin-top: 8rpx;
}

.address-text {
  font-size: 26rpx;
  color: #d1d5db;
  line-height: 1.4;
}

.no-address {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.no-address-icon {
  font-size: 32rpx;
  color: #6b7280;
}

.no-address-text {
  font-size: 28rpx;
  color: #6b7280;
}

.address-arrow {
  margin-left: 16rpx;
}

.arrow-icon {
  font-size: 24rpx;
  color: #9ca3af;
}

.payment-methods {
  background: #1a1a1a;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  border: 2rpx solid #374151;
}

.payment-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #f59e0b;
  margin-bottom: 24rpx;
}

.payment-options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.payment-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border: 2rpx solid #374151;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.payment-option.selected {
  border-color: #f59e0b;
  background: rgba(245, 158, 11, 0.1);
}

.payment-option.disabled {
  opacity: 0.5;
  background: #111111;
}

.payment-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.payment-icon {
  font-size: 48rpx;
}

.payment-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.payment-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #e5e5e5;
}

.payment-tip {
  font-size: 24rpx;
  color: #9ca3af;
}

.payment-radio {
  font-size: 32rpx;
}

.radio-checked {
  color: #f59e0b;
}

.radio-unchecked {
  color: #9ca3af;
}

.payment-actions {
  display: flex;
  gap: 24rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.action-btn.secondary {
  background: #374151;
  color: #e5e5e5;
}

.action-btn.primary {
  background: linear-gradient(135deg, #ec4899, #f59e0b);
  color: white;
}

.action-btn.loading {
  opacity: 0.7;
}

.btn-icon {
  margin-right: 16rpx;
  font-size: 32rpx;
}

.payment-processing {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.processing-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}

.processing-content {
  background: #1a1a1a;
  border-radius: 16rpx;
  padding: 64rpx;
  text-align: center;
  border: 2rpx solid #374151;
}

.processing-icon {
  font-size: 96rpx;
  display: block;
  margin-bottom: 32rpx;
}

.processing-text {
  font-size: 32rpx;
  color: #e5e5e5;
}
