.container {
  min-height: 100vh;
  background: #0a0a0a;
  color: #e5e5e5;
  padding: 32rpx;
}

.header {
  text-align: center;
  margin-bottom: 48rpx;
}

.title {
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon {
  font-size: 48rpx;
  margin-right: 16rpx;
  color: #f59e0b;
}

.title-text {
  font-size: 48rpx;
  font-weight: bold;
}

.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  text-align: center;
}

.empty-icon {
  font-size: 128rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #9ca3af;
  margin-bottom: 48rpx;
}

.back-btn {
  background: linear-gradient(135deg, #ec4899, #f59e0b);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
}

/* 全选区域 */
.select-all-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background: #1a1a1a;
  border-bottom: 1rpx solid #374151;
  margin-bottom: 16rpx;
  border-radius: 16rpx 16rpx 0 0;
}

.select-all {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.checkbox:not(.checked) {
  border: 2rpx solid #374151;
  color: transparent;
  background: transparent;
}

.checkbox.checked {
  background: linear-gradient(135deg, #10b981, #34d399);
  color: white;
  border: 2rpx solid #10b981;
}

.select-text {
  font-size: 28rpx;
  color: #e5e5e5;
}

.item-count {
  font-size: 24rpx;
  color: #9ca3af;
}

.cart-items {
  margin-bottom: 32rpx;
}

.cart-item {
  background: #1a1a1a;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid #374151;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.item-select {
  flex-shrink: 0;
}

.item-image {
  flex-shrink: 0;
  position: relative;
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #374151;
  border-radius: 12rpx;
}

.item-emoji {
  font-size: 48rpx;
}

.item-element {
  position: absolute;
  bottom: -6rpx;
  right: -6rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 18rpx;
  font-weight: 500;
}

.element-tu {
  background: rgba(245, 158, 11, 0.9);
  color: white;
}

.element-huo {
  background: rgba(239, 68, 68, 0.9);
  color: white;
}

.element-mu {
  background: rgba(34, 197, 94, 0.9);
  color: white;
}

.element-jin {
  background: rgba(156, 163, 175, 0.9);
  color: white;
}

.element-shui {
  background: rgba(59, 130, 246, 0.9);
  color: white;
}

.item-info {
  flex: 1;
  margin-right: 16rpx;
}

.item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #f59e0b;
  margin-bottom: 8rpx;
}

.item-desc {
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 16rpx;
}

.item-price {
  font-size: 36rpx;
  color: #ec4899;
  font-weight: bold;
}

.item-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  align-items: flex-end;
}

.quantity-controls {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.qty-btn {
  width: 64rpx;
  height: 64rpx;
  background: #374151;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.quantity {
  font-size: 28rpx;
  font-weight: 500;
  min-width: 64rpx;
  text-align: center;
}

.remove-btn {
  background: #dc2626;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
  font-size: 24rpx;
}

/* 协议确认 */
.agreement-section {
  padding: 24rpx 32rpx;
  background: #1a1a1a;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #374151;
}

.agreement-check {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.agreement-text {
  font-size: 26rpx;
  color: #9ca3af;
}

.agreement-link {
  font-size: 26rpx;
  color: #3b82f6;
  text-decoration: underline;
}

.total-section {
  background: #1a1a1a;
  border-radius: 16rpx;
  padding: 32rpx;
  border: 2rpx solid #374151;
  position: sticky;
  bottom: 0;
}

.total-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #374151;
}

.selected-count {
  display: flex;
  align-items: center;
}

.count-text {
  font-size: 24rpx;
  color: #9ca3af;
}

.total-amount {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.total-label {
  font-size: 32rpx;
  color: #9ca3af;
}

.total-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #f59e0b;
}

.checkout-actions {
  display: flex;
  gap: 24rpx;
}

.action-btn {
  flex: 1;
  padding: 32rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  text-align: center;
}

.action-btn.secondary {
  background: #374151;
  color: #e5e5e5;
}

.action-btn.primary {
  background: linear-gradient(135deg, #ec4899, #f59e0b);
  color: white;
  transition: all 0.3s ease;
}

.action-btn.primary.disabled {
  background: #4b5563;
  color: #9ca3af;
  opacity: 0.6;
}

.action-btn:active:not(.disabled) {
  transform: scale(0.98);
}