.container {
  min-height: 100vh;
  background: #0a0a0a;
  color: #e5e5e5;
}

/* 页面头部 */
.header {
  background: linear-gradient(135deg, #1a1a1a, #2d1b69);
  padding: 32rpx;
  border-bottom: 1rpx solid #374151;
}

.header-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.back-btn, .new-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(245, 158, 11, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #f59e0b;
  border: none;
}

.title {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.icon {
  font-size: 48rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #e5e5e5;
}

.subtitle {
  text-align: center;
}

.count-text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  gap: 24rpx;
}

.loading-icon {
  font-size: 64rpx;
  animation: spin 2s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: #9ca3af;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  text-align: center;
  padding: 32rpx;
}

.empty-icon {
  font-size: 128rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #e5e5e5;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #9ca3af;
  margin-bottom: 48rpx;
}

.create-btn {
  background: linear-gradient(135deg, #ec4899, #f59e0b);
  border: none;
  border-radius: 16rpx;
  padding: 32rpx 48rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  color: white;
  font-size: 28rpx;
  font-weight: 500;
}

/* 报告列表 */
.reports-list {
  padding: 32rpx;
}

.report-card {
  background: #1a1a1a;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #374151;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.report-card:active {
  transform: scale(0.98);
}

.report-card.generating {
  border-color: #f59e0b;
  background: linear-gradient(135deg, #1a1a1a, rgba(245, 158, 11, 0.05));
}

.report-card.failed {
  border-color: #ef4444;
  background: linear-gradient(135deg, #1a1a1a, rgba(239, 68, 68, 0.05));
}

/* 状态标签 */
.status-badge {
  position: absolute;
  top: 0;
  right: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 0 0 12rpx 12rpx;
  z-index: 2;
}

.status-badge.generating {
  background: linear-gradient(135deg, #f59e0b, #fbbf24);
}

.status-badge.failed {
  background: linear-gradient(135deg, #ef4444, #f87171);
}

.status-badge.premium {
  background: linear-gradient(135deg, #8b5cf6, #a78bfa);
}

.status-text {
  font-size: 20rpx;
  font-weight: 500;
  color: white;
}

/* 报告内容 */
.report-content {
  padding: 32rpx;
}

.report-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #e5e5e5;
}

.day-master {
  padding: 8rpx 16rpx;
  background: rgba(245, 158, 11, 0.2);
  border-radius: 12rpx;
  border: 1rpx solid rgba(245, 158, 11, 0.3);
}

.master-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #f59e0b;
}

.create-time {
  text-align: right;
}

.time-text {
  font-size: 22rpx;
  color: #9ca3af;
}

.birth-info {
  margin-bottom: 24rpx;
}

.birth-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.birth-label {
  min-width: 140rpx;
  font-size: 26rpx;
  color: #9ca3af;
}

.birth-value {
  font-size: 26rpx;
  color: #e5e5e5;
}

.report-preview {
  padding: 16rpx;
  background: rgba(245, 158, 11, 0.05);
  border-radius: 12rpx;
  border: 1rpx solid rgba(245, 158, 11, 0.2);
  margin-bottom: 24rpx;
}

.preview-text {
  font-size: 24rpx;
  color: #d1d5db;
  line-height: 1.4;
}

/* 操作按钮 */
.report-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.view-btn {
  background: linear-gradient(135deg, #10b981, #34d399);
  color: white;
}

.retry-btn {
  background: linear-gradient(135deg, #f59e0b, #fbbf24);
  color: white;
}

.share-btn {
  background: #374151;
  color: #e5e5e5;
}

.delete-btn {
  background: #dc2626;
  color: white;
}

.action-btn:active {
  transform: scale(0.95);
}

/* 生成中覆盖层 */
.generating-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 3;
}

.generating-content {
  text-align: center;
  padding: 32rpx;
}

.generating-icon {
  font-size: 64rpx;
  display: block;
  margin-bottom: 16rpx;
  animation: spin 2s linear infinite;
}

.generating-text {
  font-size: 28rpx;
  color: #f59e0b;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.progress-bar {
  width: 200rpx;
  height: 8rpx;
  background: #374151;
  border-radius: 4rpx;
  overflow: hidden;
  margin: 0 auto;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #f59e0b, #fbbf24);
  border-radius: 4rpx;
  animation: progress 3s ease-in-out infinite;
}

@keyframes progress {
  0% { width: 0%; }
  50% { width: 70%; }
  100% { width: 100%; }
}

/* 底部提示 */
.bottom-tip {
  text-align: center;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.4;
}