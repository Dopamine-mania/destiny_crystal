/* Container */
.container {
  min-height: 100vh;
  background: #0a0a0a;
  color: #e5e5e5;
  padding: 48rpx;
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", SimSun, sans-serif;
}

/* Header */
.header {
  text-align: center;
  margin-bottom: 48rpx;
}

.title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.icon {
  font-size: 48rpx;
  margin-right: 16rpx;
  color: #f59e0b;
}

.title-text {
  font-size: 48rpx;
  font-weight: bold;
  font-family: inherit;
}

.subtitle {
  color: #9ca3af;
  font-size: 28rpx;
  line-height: 1.5;
  font-family: inherit;
}

/* Form Container */
.form-container {
  background: #1a1a1a;
  border-radius: 16rpx;
  padding: 48rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

/* Form Items */
.form-item {
  margin-bottom: 48rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  font-weight: 500;
  color: #9ca3af;
  margin-bottom: 16rpx;
  font-family: inherit;
}

/* Input */
.input-wrapper {
  position: relative;
}

.input-icon {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #9ca3af;
}

.input {
  width: 100%;
  background: #0a0a0a;
  border: 2rpx solid #4b5563;
  border-radius: 12rpx;
  padding: 24rpx 24rpx 24rpx 72rpx;
  color: #e5e5e5;
  font-size: 32rpx;
  font-family: inherit;
  box-sizing: border-box;
}

.input:focus {
  border-color: #f59e0b;
}

.placeholder {
  color: #6b7280;
}

/* Gender Selection */
.gender-options {
  display: flex;
  gap: 32rpx;
}

.gender-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  border: 4rpx solid #4b5563;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  background: transparent;
  color: inherit;
  font-family: inherit;
}

.gender-btn.active {
  border-color: #f59e0b;
  background: rgba(245, 158, 11, 0.1);
}

.gender-emoji {
  font-size: 48rpx;
  margin-right: 16rpx;
}

/* Date Selectors */
.date-selectors {
  display: flex;
  gap: 16rpx;
}

.date-picker {
  flex: 1;
  background: #0a0a0a;
  border: 2rpx solid #4b5563;
  border-radius: 12rpx;
  padding: 24rpx;
}

.time-picker {
  width: 100%;
  background: #0a0a0a;
  border: 2rpx solid #4b5563;
  border-radius: 12rpx;
  padding: 24rpx;
}

.picker-text {
  color: #e5e5e5;
  font-size: 32rpx;
  text-align: center;
  font-family: inherit;
}

/* Submit Button */
.submit-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #ec4899, #f59e0b);
  color: white;
  font-weight: bold;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(236, 72, 153, 0.3);
  transition: all 0.3s ease;
  border: none;
  font-size: 32rpx;
  font-family: inherit;
}

.submit-btn.active {
  transform: scale(1.02);
}

.submit-btn.disabled {
  opacity: 0.5;
  transform: none;
  background: #4b5563;
  box-shadow: none;
}

.btn-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.btn-text {
  font-size: 32rpx;
  font-family: inherit;
}