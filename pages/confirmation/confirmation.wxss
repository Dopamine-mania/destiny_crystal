.container {
  min-height: 100vh;
  background: #0a0a0a;
  color: #e5e5e5;
  padding: 32rpx;
}

.success-animation {
  text-align: center;
  margin: 80rpx 0;
  opacity: 0;
  transform: scale(0.5);
  transition: all 0.8s ease;
}

.success-animation.show {
  opacity: 1;
  transform: scale(1);
}

.success-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 32rpx;
  animation: bounce 0.8s ease;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-20rpx);
  }
  60% {
    transform: translateY(-10rpx);
  }
}

.success-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #10b981;
  text-shadow: 0 0 20rpx rgba(16, 185, 129, 0.3);
}

.order-details {
  margin-bottom: 48rpx;
}

.detail-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #f59e0b;
  margin-bottom: 24rpx;
}

.detail-card {
  background: #1a1a1a;
  border-radius: 16rpx;
  padding: 32rpx;
  border: 2rpx solid #374151;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #374151;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 28rpx;
  color: #9ca3af;
}

.detail-value {
  font-size: 28rpx;
  color: #e5e5e5;
  font-weight: 500;
}

.detail-value.amount {
  font-size: 36rpx;
  color: #f59e0b;
  font-weight: bold;
}

.detail-value.status-success {
  color: #10b981;
  font-weight: bold;
}

.tips-section {
  background: #1a1a1a;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 48rpx;
  border: 2rpx solid #374151;
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #f59e0b;
  margin-bottom: 24rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #d1d5db;
  line-height: 1.5;
}

.action-buttons {
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.action-btn.secondary {
  background: #374151;
  color: #e5e5e5;
}

.home-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #ec4899, #f59e0b);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.btn-icon {
  margin-right: 16rpx;
  font-size: 32rpx;
}
