.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #0a0a0a, #1a1a1a);
  color: #e5e5e5;
  padding: 64rpx 32rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 成功内容区域 */
.success-content {
  width: 100%;
  max-width: 600rpx;
  opacity: 0;
  transform: translateY(80rpx);
  transition: all 0.8s ease;
}

.success-content.show {
  opacity: 1;
  transform: translateY(0);
}

/* 成功图标 */
.success-icon {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 48rpx;
}

.icon-crown {
  font-size: 120rpx;
  z-index: 2;
  position: relative;
  animation: bounce 2s infinite;
}

.success-ring {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  border: 4rpx solid #f59e0b;
  border-radius: 50%;
  opacity: 0.3;
  animation: pulse 2s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-20rpx);
  }
  60% {
    transform: translateY(-10rpx);
  }
}

@keyframes pulse {
  0% {
    transform: scale(1);
    opacity: 0.3;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.1;
  }
  100% {
    transform: scale(1);
    opacity: 0.3;
  }
}

/* 成功信息 */
.success-info {
  text-align: center;
  margin-bottom: 48rpx;
}

.success-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #f59e0b;
  margin-bottom: 16rpx;
}

.success-subtitle {
  display: block;
  font-size: 28rpx;
  color: #9ca3af;
}

/* 会员信息卡片 */
.member-card {
  background: linear-gradient(135deg, #1a1a1a, rgba(245, 158, 11, 0.05));
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 48rpx;
  border: 2rpx solid rgba(245, 158, 11, 0.2);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(245, 158, 11, 0.2);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #e5e5e5;
}

.vip-badge {
  background: linear-gradient(135deg, #ec4899, #f59e0b);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: bold;
  color: white;
}

.card-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-label {
  font-size: 26rpx;
  color: #9ca3af;
}

.info-value {
  font-size: 26rpx;
  color: #e5e5e5;
  font-weight: 500;
}

/* 特权预览 */
.privileges-preview {
  margin-bottom: 64rpx;
}

.preview-title {
  display: block;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #e5e5e5;
  margin-bottom: 32rpx;
}

.privileges-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.privilege-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx;
  background: rgba(245, 158, 11, 0.05);
  border-radius: 16rpx;
  border: 1rpx solid rgba(245, 158, 11, 0.2);
}

.privilege-icon {
  font-size: 40rpx;
}

.privilege-text {
  font-size: 24rpx;
  color: #d1d5db;
  text-align: center;
}

/* 行动按钮 */
.action-buttons {
  margin-bottom: 64rpx;
}

.primary-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #ec4899, #f59e0b);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  margin-bottom: 24rpx;
  transition: all 0.3s ease;
}

.primary-btn::after {
  display: none;
}

.primary-btn:active {
  transform: scale(0.98);
}

.btn-icon {
  font-size: 28rpx;
}

.btn-text {
  color: white;
}

.secondary-buttons {
  display: flex;
  gap: 16rpx;
}

.secondary-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  background: rgba(245, 158, 11, 0.1);
  border: 2rpx solid rgba(245, 158, 11, 0.3);
  color: #f59e0b;
  font-size: 26rpx;
  transition: all 0.3s ease;
}

.secondary-btn::after {
  display: none;
}

.secondary-btn:active {
  background: rgba(245, 158, 11, 0.2);
}

.secondary-btn .btn-text {
  color: #f59e0b;
}

/* 底部操作 */
.bottom-actions {
  margin-bottom: 32rpx;
}

.help-section {
  text-align: center;
}

.help-text {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
}

.contact-btn {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  border-radius: 24rpx;
  background: rgba(59, 130, 246, 0.1);
  border: 1rpx solid rgba(59, 130, 246, 0.3);
  font-size: 24rpx;
  color: #3b82f6;
}

.contact-btn::after {
  display: none;
}

.contact-icon {
  font-size: 20rpx;
}

.contact-text {
  color: #3b82f6;
}

/* 返回按钮 */
.back-section {
  width: 100%;
  max-width: 600rpx;
}

.back-btn {
  width: 100%;
  padding: 24rpx;
  border-radius: 12rpx;
  background: transparent;
  border: 2rpx solid #374151;
  color: #9ca3af;
  font-size: 28rpx;
}

.back-btn::after {
  display: none;
}

.back-text {
  color: #9ca3af;
}