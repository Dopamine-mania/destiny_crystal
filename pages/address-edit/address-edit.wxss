.container {
  min-height: 100vh;
  background: #0a0a0a;
  color: #e5e5e5;
}

/* 页面头部 */
.header {
  background: linear-gradient(135deg, #1a1a1a, #2d1b69);
  padding: 32rpx;
  border-bottom: 1rpx solid #374151;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.back-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(245, 158, 11, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #f59e0b;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #e5e5e5;
}

.placeholder {
  width: 80rpx;
}

/* 表单区域 */
.form-section {
  padding: 32rpx;
}

.form-group {
  background: #1a1a1a;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  border: 1rpx solid #374151;
  overflow: hidden;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #374151;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #d1d5db;
  font-weight: 500;
  flex-shrink: 0;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #e5e5e5;
  background: transparent;
  border: none;
  outline: none;
}

.input::placeholder {
  color: #6b7280;
}

/* 地区选择 */
.region-item {
  padding: 0;
}

.region-picker {
  flex: 1;
  padding: 32rpx;
}

.picker-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.region-text {
  font-size: 28rpx;
  color: #e5e5e5;
}

.arrow {
  font-size: 24rpx;
  color: #6b7280;
}

/* 详细地址 */
.detail-item {
  align-items: flex-start;
  padding-top: 32rpx;
}

.textarea {
  flex: 1;
  min-height: 120rpx;
  font-size: 28rpx;
  color: #e5e5e5;
  background: transparent;
  border: none;
  outline: none;
  line-height: 1.5;
}

.textarea::placeholder {
  color: #6b7280;
}

/* 地址标签 */
.label-section {
  padding: 32rpx;
}

.tag-list {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
  flex-wrap: wrap;
}

.tag-item {
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  border: 2rpx solid #374151;
  background: transparent;
  transition: all 0.3s ease;
}

.tag-item.selected {
  border-color: #f59e0b;
  background: rgba(245, 158, 11, 0.1);
}

.tag-text {
  font-size: 24rpx;
  color: #d1d5db;
}

.tag-item.selected .tag-text {
  color: #f59e0b;
}

/* 默认地址开关 */
.default-item {
  justify-content: space-between;
  cursor: pointer;
}

.switch {
  display: flex;
  align-items: center;
}

.switch-icon {
  font-size: 32rpx;
  color: #f59e0b;
}

/* 保存按钮 */
.save-section {
  padding: 32rpx;
  background: #1a1a1a;
  border-top: 1rpx solid #374151;
  position: sticky;
  bottom: 0;
}

.save-btn {
  width: 100%;
  padding: 32rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #ec4899, #f59e0b);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
}

.save-btn::after {
  display: none;
}

.save-btn:active {
  transform: scale(0.98);
}

.btn-text {
  color: white;
}